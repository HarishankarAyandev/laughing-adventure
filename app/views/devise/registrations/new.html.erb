<%= provide(:title,"Sign Up") %>
 <h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
<div class="row">
<div class="col-xs-8">
  <%= f.error_notification   class: 'alert alert-danger alert-dismissable' %>
  <%= #display_base_errors resource 
  %>
  <%= f.input :name, :autofocus => true, :input_html => { :class => "form-control" },:error_html => { :class => 'has-error'} %>
  <%= f.input :email, :required => true , :input_html => { :class => "form-control" },:error_html => { :class => 'has-error'}%>
  <%= f.input :password, :required => true, :input_html => { :class => "form-control" },:error_html => { :class => 'has-error'} %>
  <%= f.input :password_confirmation, :required => true, :input_html => { :class => "form-control" },:error_html => { :class => 'has-error'} %>
  <div class="form-inline form-group">
  <%= f.input :date_of_birth,:required => true,start_year: Date.today.year - 90 ,end_year: Date.today.year - 12,:input_html => { :class => "form-control" },:error_html => { :class => 'has-error'}%>
  </div>
  <%= f.button :submit, 'Sign up', :class => 'btn btn-success' %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
