<%= form_for(@post) do |f| %>
<div class="fields">
    <h5>All fields are required</h5>
    <%= f.label :type %>
<div class="radio">
    <%= f.radio_button(:nature, "normal") %>
<%= f.label :nature,"Normal" , :value => "nomral" %>
    <%= f.radio_button(:nature, "image") %>
<%= f.label :nature,"Image" , :value => "image" %>
    <%= f.radio_button(:nature, "document") %>
<%= f.label :nature,"Document" , :value => "document" %>
</div>
 		<%= f.label :content %>
        <%= f.text_area :content ,:required => true %>
		<%= f.label :caption %>
        <%= f.text_area :caption %><br/>
        <%= f.label :att_file, "File to Upload" %>
        <%= f.file_field :att_file %>
    <%= f.submit("Post it" , :class => "btn-primary") %>
  </div>

    
<% end %>
