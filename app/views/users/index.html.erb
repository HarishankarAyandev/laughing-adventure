<%= provide(:title,"Admin Panel") %>
<% if current_user.has_role(:admin) %>
<h3>Users</h3>
<div class="col-xs-12">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Confirmed ?</th>
      <th>Sign in Count</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.confirmed? %></td>
      <td><%= user.sign_in_count %></td>	
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td>
      <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-info btn-sm" type="button">Change role</a>
        <%= render user %>
     </td>
<td><%= button_to "Delete User",user_path(user), method: :delete, class: 'btn btn-danger btn-sm' unless user == current_user %>
         </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% else %>
    <meta HTTP-EQUIV="REFRESH" content="0; url=/">
<% end %>
