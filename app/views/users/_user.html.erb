<div id="role-options-<%= user.id %>" class="modal fade" style="display: none;">
<div class="modal-dialog">
<div class="modal-content">

  <%= simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Change Role</h3>
    </div>
    <div class="modal-body">
 	Are you sure you want to chage the role of this user from <%if user.has_role? :admin%>Admin to User <% else %>User to Admin <% end %>?      
   </div>
    <div class="modal-footer">
      <%= f.submit "Change Role", :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>
</div>
</div>
